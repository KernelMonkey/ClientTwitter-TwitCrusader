# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=twitcrusader-git
pkgver=20110601
pkgrel=1
pkgdesc="A Twitter client for Linux"
arch=('i686' 'x86_64')
url="http://www.twitcrusader.org"
license=('GPL')
depends=('gtk2' 'liboauth')
makedepends=('git')
provides=('twitcrusader')
conflicts=('twitcrusader')

_gitroot="git://github.com/PTKDev/ClientTwitter-TwitCrusader.git"
_gitname="twitcrusader"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cd "${srcdir}"/$_gitname
  git checkout nightly

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  autoreconf --install
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
} 
